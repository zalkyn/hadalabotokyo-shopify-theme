{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .img-wrapper-{{ id }}{
    font-size: 0;
    line-height: 0;
  }
  .img-wrapper-{{ id }} img{
    width: 100%;
    height: 100%;
    max-height: 500px;
    min-height: 500px;
    object-fit: cover;
  }
  .texts-{{ id }}{
    margin-block-start: 40px;
    border-bottom: .0625rem solid #dddedc;
    padding-block-end: 30px;
  }
  .texts-{{ id }}.page-width.page-width--narrow{
    max-width: 90rem;
  }
  .texts-{{ id }} h2{
    font-size: 40px;
    line-height: 48px;
    color: rgb(51, 51, 51);
    margin: 0 0 20px;
    padding: 0 0 30px;
    border-bottom: .125rem solid #000;
  }
  .texts-{{ id }} p{
    font-size: 20px;
    line-height: 28px;
    color: rgb(51, 51, 51);
    margin: 0;
  }
  .texts-{{ id }} h4{
    font-size: 14px;
    line-height: 18px;
    color: rgb(51, 51, 51);
    text-transform: uppercase;
    margin: 40px 0 0;
  }

  @media screen and (max-width: 768px){
    .img-wrapper-{{ id }} img{
      max-height: 300px;
      min-height: 300px;
    }
    .texts-{{ id }}{
      margin-block-start: 40px;
      border-bottom: .0625rem solid #dddedc;
      padding-block-end: 30px;
    }
    .texts-{{ id }} h2{
      font-size: 32px;
      line-height: 38px;
      color: rgb(51, 51, 51);
      margin: 0 0 14px;
      padding: 0 0 20px;
    }
    .texts-{{ id }} p{
      font-size: 16px;
      line-height: 22px;
    }
    .texts-{{ id }} h4{
      margin: 30px 0 0;
    }
  }
</style>


<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if article.image %}
        <div class="img-wrapper-{{ id }}">
          {{ article.image | image_url: width: 1920 | image_tag }}
        </div>
      {% endif %}
      <div class="texts-{{ id }} page-width page-width--narrow">
        {% if article.title != blank %}
          <h2>{{ article.title }}</h2>
        {% endif %}
        {% if article.excerpt != blank %}
          <p>{{ article.excerpt }}</p>
        {% endif %}
        {% if article.author != blank %}
          <h4>By {{ article.author }}</h4>
        {% endif %}
      </div>
    </div>
  </div>
</div>


{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 30px;
    align-items: center;
  }
  .img-wrapper-{{ id }} img{
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .input-field-new {
    display: grid;
    grid-template-columns: 1fr;
  }
  .input-field-new label{
    color: #000;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 400; */
    line-height: 21px;
    margin: 0 0 8px 0;
  }
  .input-field-new input{
    background: rgba(255, 203, 218, 0.50);
    width: 100%;
    height: 40px;
    line-height: 40px;
    border: none;
    outline: none;
    box-sizing: border-box;
    padding-inline: 18px;
  }
  .input-field-new input::-ms-input-placeholder,
  .input-field-new input::placeholder{
    color: #D0D0D0;
    font-size: 14px;
    font-style: normal;
    /* font-weight: 400; */
    line-height: normal;
    text-transform: capitalize;
  }

  .new-form-input-wrapper {
    display: flex;
    gap: 22px;
    flex-direction: column;
  }
  .heading-{{ id }} {
    color: #000;
    text-align: center;
    font-size: 28px;
    font-style: normal;
    /* font-weight: 500; */
    line-height: 21px;
    margin: 0 0 30px 0;
  }
  .submit-new-register{

  }
  .submit-new-register input{
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 52px;
    line-height: 52px;
    padding: 0px 37px;
    background: #EA094B;
    border: none;
    outline: none;
    margin-top: 22px;
    cursor: pointer;
    color: #fff;
    /* background: rgba(255, 203, 218, 0.50); */
    text-align: center;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 500; */
    line-height: normal;
    text-transform: uppercase;
  }
  .new-register-errors {
    background: #f5d8cc87;
    color: #ff0000;
    box-sizing: border-box;
    padding: 1px 0px;
    margin: 20px 0 0px 0;
    font-size: 15px;
    line-height: 1.5;
  }
  .new-register-errors ul{
    padding: 10px 34px;
    margin: 0;
  }
  .new-return-to-store {
    display: flex;
    margin-top: 22px;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }
  .new-return-to-store svg{
    width: 20px;
  }
  .new-return-to-store span{
    color: #000;
    text-align: center;
    font-family: Nunito;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 500; */
    line-height: 21px;
  }

  .have-an-account{
    display: flex;
    margin-top: 17px;
    justify-content: center;
    align-items: center;
  }
  .have-an-account p{
    color: #000;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 500; */
    line-height: 21px;
    margin: 0;
  }
  .have-an-account a{
    color: #EA094B;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 600; */
    line-height: 21px
    text-decoration-line: underline;
    text-decoration: none;
  }
  .forgot--btn{
    color: #000;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 400; */
    line-height: 21px;
    text-decoration: none;
    margin-top: 22px;
    text-align: left;
    display: flex;
  }

  .reset-btn-wrapper{
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
  }
  .reset-btn-wrapper :is(input, button){
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 52px;
    line-height: 52px;
    padding: 0px 37px;
    background: #F5D8CC;
    border: none;
    outline: none;
    margin-top: 22px;
    cursor: pointer;
    color: #000;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    /* font-weight: 500; */
    line-height: normal;
    text-transform: uppercase;
  }
  @media(max-width: 768px) {
    .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: 1fr;
      grid-gap: 30px;
    }
  }
</style>

<!-- reset password -->
<div class="sec-{{ id }} reset-{{ id }} hidden">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="img-wrapper-{{ id }}">
        {% unless section.settings.image == blank %}
          {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy' }}
        {% endunless %}
      </div>
      <div class="form-wrapper-{{ id }}">
        <h2 class="heading-{{ id }}">Reset your password</h2>
        {% form 'recover_customer_password', class: 'new-reset-form' %}
          {% assign recover_success = form.posted_successfully? %}
          <div class="new-form-input-wrapper">
            <div class="email-new input-field-new">
              <label for="email">Email</label>
              <input
                required="required"
                class="required{% if form.errors %} invalid{% endif %}"
                type="email"
                value=""
                name="email"
                id="RecoverEmail"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  aria-invalid="true"
                  aria-describedby="RecoverEmail-email-error"
                  autofocus
                {% endif %}
                placeholder="{{ 'customer.login_page.email' | t }}"
              >
            </div>
          </div>

          {% if form.errors %}
            <div class="new-register-errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          <div class="submit-new-register">
            <div class="reset-btn-wrapper">
              <input type="submit" value="SUBMIT">
              <button type="button">CANCEL</button>
            </div>
            <div class="have-an-account">
              <p>Don’t have an account?</p>
              &nbsp;
              <a href="/account/register">Create New Account</a>
            </div>
            <a href="/" class="new-return-to-store">
              <svg xmlns="http://www.w3.org/2000/svg" width="21" height="15" viewBox="0 0 21 15" fill="none">
                <path d="M8.30761 10.6476L8.30761 14.5212L-5.925e-07 7.74383L8.30761 0.967548L8.30761 4.93623C14.0761 4.93623 18.1163 3.38813 21 -1.51873e-05C19.8456 4.84003 16.3848 9.67784 8.30761 10.6476Z" fill="#DEB6A0"/>
              </svg>
              <span>Return to Store</span>
            </a>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>
<!-- end reset password -->

<div class="sec-{{ id }} login-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="img-wrapper-{{ id }}">
        {% unless section.settings.image == blank %}
          {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy' }}
        {% endunless %}
      </div>
      <div class="form-wrapper-{{ id }}">
        <h2 class="heading-{{ id }}">{{ section.settings.heading }}</h2>
        {% form 'customer_login', class: 'new-login-form' %}
          <div class="new-form-input-wrapper">
            <div class="email-new input-field-new">
              <label for="email">Email</label>
              <input type="email" name="customer[email]" placeholder="Email" required>
            </div>

            <div class="password-new input-field-new">
              <label for="password">Password</label>
              <input type="password" name="customer[password]" placeholder="Password" required>
            </div>
          </div>

          {% if form.errors %}
            <div class="new-register-errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          {%- if recover_success == true -%}
            <div class="new-register-errors" style="padding: 13px 16px;">
              {{ 'customer.recover_password.success' | t }}
            </div>
          {%- endif -%}

          <a class="forgot--btn" href="/account/login#recover">Forgot Password</a>

          <div class="submit-new-register">
            <input type="submit" value="SIGN IN">
            <div class="have-an-account">
              <p>Don’t have an account?</p>
              &nbsp;
              <a href="/account/register">Create New Account</a>
            </div>
            <a href="/" class="new-return-to-store">
              <svg xmlns="http://www.w3.org/2000/svg" width="21" height="15" viewBox="0 0 21 15" fill="none">
                <path d="M8.30761 10.6476L8.30761 14.5212L-5.925e-07 7.74383L8.30761 0.967548L8.30761 4.93623C14.0761 4.93623 18.1163 3.38813 21 -1.51873e-05C19.8456 4.84003 16.3848 9.67784 8.30761 10.6476Z" fill="#EA094B"/>
              </svg>
              <span>Return to Store</span>
            </a>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<script>
  let loginSec = document.querySelector(".login-{{ id }}")
  let resetSec = document.querySelector(".reset-{{ id }}")
  if(location.href === "https://hadalabotokyo.com/account/login#recover") {
    loginSec.classList.add("hidden")
    resetSec.classList.remove("hidden")
  } else {
    loginSec.classList.remove("hidden")
    resetSec.classList.add("hidden")
  }
  document.querySelector(".forgot--btn").addEventListener("click", e => {
    e.preventDefault()
    location.replace("/account/login#recover");
    loginSec.classList.add("hidden")
    resetSec.classList.remove("hidden")
  })
</script>


{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: rgba(234, 9, 75, 0.05);
  }
  .wrapper-{{ id }}{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .heading-{{ id }}{
    flex: 0 0 45%;
  }
  .heading-{{ id }} h2{
    color: #000;
    font-size: 32px;
    line-height: normal;
    margin: 0;
  }
  .points-list-{{ id }}{
    flex: 0 0 55%
  }
  .points-list-{{ id }} p{
    color: #000;
    font-size: 16px;
    line-height: normal;
    margin: 0 0 23px;
  }
  .points-list-{{ id }} ul{
    margin: 0 0 0 18px;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }
  .points-list-{{ id }} ul li{
    color: #000;
    font-size: 16px;
    line-height: normal;
    flex: 0 0 220px;
  }
  .points-list-{{ id }} ul li::marker{
    color: #EA094B;
  }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
     .wrapper-{{ id }}{
       flex-direction: column;
     }
    .heading-{{ id }}{
      flex: 0 0 100%;
    }
    .heading-{{ id }} h2{
      font-size: 24px;
      margin: 0 0 16px;
    }
    .points-list-{{ id }}{
      flex: 0 0 100%
    }
    .points-list-{{ id }} p{
      color: #000;
      font-size: 14px;
      line-height: normal;
      margin: 0 0 18px;
    }
    .points-list-{{ id }} ul{
      margin: 0 0 0 16px;
      gap: 12px;
    }
    .points-list-{{ id }} ul li{
      font-size: 14px;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="heading-{{ id }}">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      </div>
      <div class="points-list-{{ id }}">
        {% if section.settings.subheading != blank %}
          {{ section.settings.subheading }}
        {% endif %}
        <ul>
          {% for block in section.blocks %}
            {% if block.settings.title != blank %}
              <li>{{ block.settings.title }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Points List",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "Is this for you?"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Sub heading",
      "default": "<p>Like a tall glass of water after a hot day, this Hada Labo Tokyo serum saturates skin with hydration for dewy and healthy skin.</p>"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Points List"
    }
  ]
}
{% endschema %}
